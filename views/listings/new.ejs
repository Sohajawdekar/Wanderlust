<% layout('/layouts/boilerplate') -%>
<body>
    
    <form action="/Listings" method="post" class="row g-3 needs-validation new-entry col-8 offset-2" enctype="multipart/form-data" novalidate>
        <h3 class="header">Create new listing</h3>
        <div class="row-md-4">
          <label for="validationCustom01" class="form-label card-text" >Title</label>
          <input type="text" class="form-control" id="validationCustom01"  name="title" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="row-md-4">
          <label for="validationCustom02" class="form-label card-text" >Description</label>
          <textarea type="text" class="form-control description" id="validationCustom02" name="description" value="Otto" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3">
                <label for="validationCustom04" class="form-label card-text" >Country</label>
                <input class="form-select" id="validationCustom04" name="country" required>
                <div class="invalid-feedback">
                  Please select a valid state.
                </div>
              </div>
              <div class="col-md-4">
                <label for="validationCustomUsername" class="form-label card-text" >Price</label>
                <div class="input-group has-validation">
                  <span class="input-group-text" id="inputGroupPrepend">&#8377; </span>
                  <input type="number" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" name="price" required>
                  <div class="invalid-feedback">
                    Please enter the rent.
                  </div>
                </div>
              </div>
        </div>
        
        <div class="row-md-6">
          <label for="validationCustom03" class="form-label card-text">Location</label>
          <input type="text" class="form-control" id="validationCustom03" name="location" required>
          <div class="invalid-feedback">
            Please provide a valid city.
          </div>
        </div>
        
        <div class="row-md-3">
          <label for="validationCustom05" class="form-label card-text" >Choose File</label>
          <input type="file" class="form-control" name="image" id="validationCustom05" required>
          <div class="invalid-feedback">
            Please provide an image.
          </div>
        </div>
        <div class="row-12">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
            <label class="form-check-label" for="invalidCheck">
              Agree to terms and conditions
            </label>
            <div class="invalid-feedback">
              You must agree before submitting.
            </div>
          </div>
        </div>
        <div class="row-12">
          <button class="btn btn-primary" type="submit">Submit form</button>
        </div>
      </form>













