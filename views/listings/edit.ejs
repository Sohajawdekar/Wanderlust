<% layout('/layouts/boilerplate') -%>
<body>
    <form action="/Listings/<%= listing._id %>?_method=PUT" method="post" enctype="multipart/form-data" class="row g-3 needs-validation new-entry col-8 offset-2" novalidate>
        <h3 class="header">Edit listing</h3>
        <div class="row-md-4">
          <label for="validationCustom01" class="form-label card-text" >Title</label>
          <input type="text" class="form-control" id="validationCustom01" value="<%= listing.title %>" name="title" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="row-md-4">
          <label for="validationCustom02" class="form-label card-text" >Description</label>
          <textarea type="text" class="form-control description" id="validationCustom02" name="description"  required><%= listing.description %></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3">
                <label for="validationCustom04" class="form-label card-text" >Country</label>
                <input class="form-select" id="validationCustom04" name="country" value="<%= listing.country%>" required>
                <div class="invalid-feedback">
                  Please select a valid state.
                </div>
              </div>
              <div class="col-md-4">
                <label for="validationCustomUsername" class="form-label card-text" >Price</label>
                <div class="input-group has-validation">
                  <span class="input-group-text" id="inputGroupPrepend">&#8377; </span>
                  <input type="text" class="form-control" id="validationCustomUsername" value="<%= listing.price%>" aria-describedby="inputGroupPrepend" name="price" required>
                  <div class="invalid-feedback">
                    Please enter the rent.
                  </div>
                </div>
              </div>
        </div>
        
        <div class="row-md-6">
          <label for="validationCustom03" class="form-label card-text">Location</label>
          <input type="text" class="form-control" value="<%= listing.location%>" id="validationCustom03" name="location" required>
          <div class="invalid-feedback">
            Please provide a valid city.
          </div>
        </div>
        <div class="row-md-3">
          <div class="card-text mb-2">Original Image Preview </div>
          <img src="<%= listing.image.url %>" style="width: 200px; height: 150px;" alt="listing_image">
        </div>
        
        <div class="row-md-3">
          <label for="validationCustom05" class="form-label card-text" ></label>
          <input type="file"
          class="form-control"
          placeholder="upload a different image"
          name="image"
          id="validationCustom05" >
          <div class="invalid-feedback">
            Please provide a valid url.
          </div>
        </div>
        <div class="row-12">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
            <label class="form-check-label" for="invalidCheck">
              Agree to terms and conditions
            </label>
            <div class="invalid-feedback">
              You must agree before submitting.
            </div>
          </div>
        </div>
        <div class="row-12">
          <button class="btn btn-primary" type="submit">Submit form</button>
        </div>
      </form>

    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
