<% layout('/layouts/boilerplate') -%>
<body>
    <h3 class="header">Explore</h3>
    <div class=" cards row  row-cols-auto  ms-3">
        <% for(listing of allListings){ %>
            <a href="/Listings/<%= listing._id %>" class="listing-text">
                <div class="card col allListings" style="width: 25rem; padding: 0;">
                    <img src="<%= listing.image.url %>" class="card-img-top allListing-img" alt="listing-image"style="height: 20rem;">
                    <div class="card-body">
                      <p class="card-text">
                       <b> <%= listing.title %></b> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
                    </p>
                    </div>
                  </div>
            </a>
              <% } %>
    </div>
    
    

</body>
