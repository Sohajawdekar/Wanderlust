<% layout('/layouts/boilerplate') -%>
<body>
    <form class="mt-4 offset-4 needs-validation" action="/login" method="post" novalidate>
      
        <div class="mb-3 col-5">
            <label for="exampleInputEmail1" class="form-label"  >Username</label>
            <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"required>
          </div>
        <div class="mb-3 col-5">
          <label for="exampleInputPassword1" class="form-label"  >Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="password" required>
          
        </div>
       
        <button type="submit" class="btn btn-primary " style="background-color: #222222;">Login</button>
        <p>Don't have an account? <a href="/signup">Signup</a></p>
      </form>
      
</body>